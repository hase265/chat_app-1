.login_wrapper
  .form_wrapper
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %h2.login_title Chatにログイン
      .form-group
        = f.email_field :email, class: 'form-control', placeholder: 'メールアドレス', autofocus: true
      .form-group
        = f.password_field :password, class: 'form-control', placeholder: 'パスワード', autocomplete: "off"
      - if devise_mapping.rememberable?
        .form-group
          = f.check_box :remember_me
          = f.label 'ログインしたままにする'
      .actions
        = f.submit 'ログイン', class: 'btn btn-info login_btn'
      = render 'devise/shared/links'
  .image_wrapper
    = image_tag 'registrations_view.png'