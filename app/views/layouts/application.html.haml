!!! 5
%html
  %head
    %title ChatApp
    %link{:rel => :stylesheet, :href => 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css'}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application'
    = javascript_include_tag '/assets/javascripts/boot.js'
    = csrf_meta_tags
  %body
    - if user_signed_in?
      %header.header
        .header-left
          .header-logo
            = link_to 'ChatApp', root_path, data: {no_turbolink: true}, class: 'header-logo-link'
        .header-right
          %ul.nav.nav-tabs
            %li.search-user-btn{role: 'presentation'}= link_to 'ユーザーを探す', search_users_path, data: {no_turbolink: true}
            %li.dropdown{role: 'presentation'}
              %div{role: 'button', 'data-toggle' => 'dropdown', 'aria-expanded' => 'false'}
                = current_user.name
                %span.caret
              %ul.dropdown-menu.user-menu-box{role: 'menu'}
                %li{class: 'user-menu-list', role: 'presentation'}= link_to 'マイページ', current_user
                / %li{class: 'user-menu-list', role: 'presentation'}= link_to 'ユーザー検索', search_users_path, data: { no_turbolink: true }
                / %li{class: 'user-menu-list', role: 'presentation'}= link_to 'プロフィール編集', edit_user_registration_path
                %li{class: 'user-menu-list', role: 'presentation'}= link_to 'ログアウト', destroy_user_session_path, :method => :delete
    = yield